extends layouts/default
block head
  title Snakes and Ladders
  include modals/memeModal
block content
  .container-fluid
    .row
      .col-xs-12
        .game-title
          .image-box
          .continue-button Click Here to Continue
      .col-xs-12
        .game-select.hide
          .select-title Select Two Players
          .select-box(type='1')
            .game-player.p-1
              .player-avatar
              .player-name AshBee
          .select-box(type='2')
            .game-player.p-2
              .player-avatar
              .player-name Ashish
          .select-box(type='3')
            .game-player.p-3
              .player-avatar
              .player-name Troller
          .select-box(type='4')
            .game-player.p-4
              .player-avatar
              .player-name Trollmaster
          .continue-button.hide Click Here to Begin the Game
  .game-box.hide
    .box.half-box
      .mini-score-box
      .game-board
        img(src='../images/boards/snakes-and-ladders-board.jpg')
      .dice-box
        .js-rollDice Roll Dice
        .message
    .box.half-box
      .dice-box
        .js-rollDice Roll Dice
        .message

block js
  script(src='js/jquery.min.js')
  script(src='js/bootstrap.min.js')
  script(src='js/jquery-ui.min.js')
  script(src='js/game.js')
  script(type='text/javascript').
    $(document).ready(function(){
      gamePlay.initSnakeLadderGame();
    });
